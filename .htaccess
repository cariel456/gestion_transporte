Options -Indexes
RewriteEngine On

RewriteRule ^header$ grupo_horianskip/includes/header.php [L]

# Redirigir todas las solicitudes de archivos PHP para ocultar la extensión
RewriteCond %{THE_REQUEST} ^[A-Z]{3,}\s([^.]+)\.php [NC]
RewriteRule ^ %1 [R=301,L]

# Asegurarse de que se manejan correctamente las URL sin extensión
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^(.*?)/?$ $1.php [NC,L]


# Páginas de error personalizadas
ErrorDocument 403 /error_pages/403.php
ErrorDocument 404 /error_pages/404.php

# Fix for the issue: Prevent infinite loop for URLs ending with .php
RewriteCond %{REQUEST_URI} !\.php$